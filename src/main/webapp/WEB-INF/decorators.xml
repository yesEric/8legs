<decorators defaultdir="/decorators">
    <excludes>
        <pattern>/40*.jsp</pattern>
        <pattern>/*ajax=true*</pattern>
        <pattern>/struts/*</pattern>
        <pattern>/resources/*</pattern>
        <pattern>/login*</pattern>
    </excludes>
    <decorator name="basic_theme" page="default.jsp">
        <pattern>/index.jsp</pattern>
    </decorator>
    <decorator name="order_theme" page="order_theme.jsp">
        <pattern>/order/*</pattern>
    </decorator>
    <decorator name="system_theme" page="system_theme.jsp">
        <pattern>/system/*</pattern>
    </decorator>
</decorators>